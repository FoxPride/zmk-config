#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define WIN_ENG 0
//#define WIN_RU  1
//#define MAC_ENG 2
//#define MAC_RU  3
//#define GAME    4
//#define GAME_FN 5
//#define NAV     6
//#define CLC     7
//#define SYM     8
//#define FUN     9
#define GAME    1
#define GAME_FN 2
#define NAV     3
#define CLC     4
#define SYM     5
#define FUN     6

&sk {
    quick-release;
    lazy;
};

/ {        
        keymap {
        compatible = "zmk,keymap";

                //Gallium V2
                default_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │  B       │  L       │  D       │  C       │  V       │                         │  J       │  F       │  O       │  U       │  ,       │          │
                        &none      &kp B      &kp L      &kp D      &kp C      &kp V                                &kp J      &kp F      &kp O      &kp U     &kp COMMA   &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  N       │  R       │  T       │  S       │  G       │                         │  Y       │  H       │  A       │  E       │  I       │          │
                        &none      &kp N      &kp R      &kp T      &kp S      &kp G                                &kp Y      &kp H      &kp A      &kp E      &kp I      &none 
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  X       │  Q       │  M       │  W       │  Z       │                         │  K       │  P       │  '       │  ;       │  .       │          |
                        &none      &kp X      &kp Q      &kp M      &kp W      &kp Z                                &kp K      &kp P      &kp SQT    &kp SEMI   &kp DOT    &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │  TAB     │  SPACE   │  ENTER   │   │  SHIFT   │  BkSPC   │  DEL     │
                                                                 &lt CLC TAB &lt NAV SPACE &kp ENTER  &kp LSHIFT &lt SYM BSPC &lt FUN DEL
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                game_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │  TAB     │  Q       │  W       │  E       │  R       │                         │          │          │  ↑       │          │          │          │
                        &none      &kp TAB    &kp Q      &kp W      &kp E      &kp R                                &none      &none      &kp UP     &none      &none      &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  SHIFT   │  A       │  S       │  D       │  F       │                         │          │  ←       │  ↓       │  →       │          │          │
                        &none    &kp LSHIFT   &kp A      &kp S      &kp D      &kp F                                &none     &kp LEFT   &kp DOWN   &kp RIGHT   &none      &none 
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  ESC     │  Z       │  X       │  C       │  V       │                         │          │          │          │          │          │          |
                        &none      &kp ESC    &kp Z      &kp X      &kp C      &kp V                                &none      &none      &none      &none      &none      &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │  CTRL    │  SPACE   │ GAME_FN  │   │   BASE   │  SPACE   │  PTSCRN  │
                                                                   &kp LCTRL  &kp SPACE &mo GAME_FN    &to WIN_ENG &kp SPACE  &kp PSCRN
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                game_fn_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │  O       │  5       │  6       │  7       │  8       │                         │          │          │          │          │          │          │
                        &none      &kp B      &kp L      &kp D      &kp C      &kp V                                &none      &none      &none      &none      &none      &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  L       │  1       │  2       │  3       │  4       │                         │          │          │          │          │          │          │
                        &none      &kp N      &kp R      &kp T      &kp S      &kp G                                &none      &none      &none      &none      &none      &none
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  G       │  J       │  I       │  M       │  T       │                         │          │          │          │          │          │          |
                        &none      &kp X      &kp Q      &kp M      &kp W      &kp Z                                &none      &none      &none      &none      &none      &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │  ENTER   │          │  X       │   │          │          │          │
                                                                   &kp ENTER   &none      &none          &none      &none      &none
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };                                

                navigation_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │  ESC     │          │ PREV TAB │ NEXT TAB │          │                         │  PGUP    │  HOME    │  ↑       │  END     │  CAPS    │          │
                        &none      &kp ESC    &none &kp LC(LS(TAB)) &kp LC(TAB) &none                              &kp PG_UP  &kp HOME    &kp UP     &kp END   &kp CAPS    &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  GUI     │  ALT     │  CTRL    │  SHIFT   │          │                         │  PGDOWN  │  ←       │  ↓       │  →       │          │          │
                        &none     &sk LGUI   &sk LALT   &sk LCTRL  &sk LSHFT   &none                               &kp PG_DN  &kp LEFT   &kp DOWN   &kp RIGHT   &none      &none 
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  BT 0    │  BT 1    │  BT 2    │  BT 3    │ BT CLEAR │                         │  INSERT  │  PTSCRN  │  APP     │  PAUSE   │          │          |
                        &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_CLR                        &kp INS  &kp PSCRN &kp K_APP &kp PAUSE_BREAK &none     &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │  GAME    │  X       │          │   │  SHIFT   │  BkSPC   │  DEL     │
                                                                   &to GAME    &none      &none          &trans   &kp BSPC    &kp DEL
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                calc_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │          │          │          │          │          │                         │  =       │  7       │  8       │  9       │  +       │          │
                        &none      &none      &none      &none      &none      &none                               &kp EQUAL   &kp N7     &kp N8     &kp N9    &kp PLUS    &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  GUI     │  ALT     │  CTRL    │  SHIFT   │          │                         │  *       │  4       │  5       │  6       │  -       │          │
                        &none     &sk LGUI   &sk LALT   &sk LCTRL  &sk LSHFT   &none                               &kp STAR    &kp N4     &kp N5     &kp N6    &kp MINUS   &none 
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │          │          │          │          │          │                         │  0       │  1       │  2       │  3       │  /       │          |
                        &none      &none      &none      &none      &none      &none                                &kp N0     &kp N1     &kp N2     &kp N3    &kp FSLH    &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │  X       │          │          │   │  SHIFT   │  BkSPC   │  DEL     │
                                                                    &none      &none      &none          &trans    &kp BSPC    &kp DEL
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                symbols_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │  !       │  @       │  #       │  $       │  %       │                         │  *       │  -       │  _       │  ~       │  `       │          │
                        &none     &kp EXCL    &kp AT    &kp HASH   &kp DLLR   &kp PRCNT                            &kp STAR  &kp MINUS   &kp UNDER  &kp TILDE  &kp GRAVE   &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  GUI     │  ALT     │  CTRL    │  SHIFT   │  ^       │                         │  :       │  (       │  {       │  [       │  <       │          │
                        &none     &sk LGUI   &sk LALT   &sk LCTRL  &sk LSHFT  &kp CARET                            &kp COLON  &kp LPAR   &kp LBRC   &kp LBKT    &kp LT     &none 
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │          │  /       │  |       │  \       │  &       │                         │  ?       │  )       │  }       │  ]       │  >       │          |
                        &none      &none     &kp FSLH   &kp PIPE   &kp NUBS   &kp AMPS                             &kp QMARK  &kp RPAR   &kp RBRC   &kp RBKT    &kp GT     &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │          │          │          │   │          │  X       │          │
                                                                    &none      &none      &none          &none      &none      &none
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };

                function_layer {
                        bindings = <
                //   ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮                         ╭──────────┬──────────┬──────────┬──────────┬──────────┬──────────╮
                //   |          │  STOP    │ PREVIOUS │  PLAY    │  NEXT    │ BRIGHTUP │                         │  F12     │  F7      │  F8      │  F9      │          │          │
                        &none    &kp C_STOP &kp C_PREV  &kp C_PP  &kp C_NEXT &kp C_BRI_UP                           &kp F12    &kp F7     &kp F8     &kp F9     &none      &none
                //   ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │  GUI     │  ALT     │  CTRL    │  SHIFT   │ BRIGHTDN │                         │  F11     │  F4      │  F5      │  F6      │          │          │
                        &none     &sk LGUI   &sk LALT   &sk LCTRL  &sk LSHFT &kp C_BRI_DN                           &kp F11    &kp F4     &kp F5     &kp F6     &none      &none 
                //   ├──────────├──────────┼──────────┼──────────┼──────────┼──────────┤                         ├──────────┼──────────┼──────────┼──────────┼──────────┼──────────┤
                //   |          │          │  MUTE    │  VOL DWN │  VOL UP  │          │                         │  F10     │  F1      │  F2      │  F3      │          │          |
                        &none      &none    &kp C_MUTE &kp C_VOL_DN &kp C_VOL_UP &none                              &kp F10    &kp F1     &kp F2     &kp F3     &none      &none
                //   ╰──────────┴──────────┴──────────┴──────────┼──────────┼──────────┼──────────╮   ╭──────────┼──────────┼──────────┼──────────┴──────────┴──────────┴──────────╯
                //                                               │          │          │          │   │          │          │  X       │
                                                                    &none      &none      &none          &none      &none      &none
                //                                               ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────┴──────────╯
                        >;
                };
        };
};
